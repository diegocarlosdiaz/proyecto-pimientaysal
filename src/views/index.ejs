<!DOCTYPE html>
<html>
  <%-include("./partials/head")%>
  
  <body>
    <!-- Navbar (sit on top) -->
    <%-include("./partials/nav")%>
    <!-- Header -->
    <%-include("./partials/header")%>
    

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <%-include("./partials/about")%>
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />

          <% menus.map(e=>{ %>
            <h4><a href="/detalle/<%= e.id %> "><%= e.title %></a></h4>
            <p class="ps-text-grey"> <%= e.description %> <span> <%= e.price %> </span>
            </p>
              
          <% }) %>
          

          
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>
      <!-- Footer -->
      <%-include("./partials/footer")%>
      
    </div>
  </body>
</html>
